  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "VibeDojo App",
      "onAutoForward": "openPreview"
    }
  },
  "remoteUser": "node",
  "containerEnv": {
    "NODE_ENV": "development"
  }
}
